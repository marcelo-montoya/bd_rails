<h1 class="title">Agregar película</h1>

<div class="content">


    <%= form_with model: @movie, method: :post do |form| %>

        <div>
            <%= form.label :name, "Nombre", class:"form-label" %>
            <%= form.text_field :name, class:"form-control" %>
        </div>
        <div>
            <%= form.label :director, "Director", class:"form-label" %>
            <%= form.text_field :director, class:"form-control" %>
        </div>
        <div>
            <%= form.label :synopsis, "Sinopsis", class:"form-label" %>
            <%= form.text_area :synopsis, class:"form-control" %>
        </div>

        <div>
            <%= form.submit "Envíar", class:"btn btn-dark" %>
        </div>


    <% end %>


</div>



    <ul class="buttons-view">
        <li><%= link_to "Ver películas", movies_index_path, class:"btn btn-dark" %></li>
        <li><%= link_to "Home", tv_index_path, class:"btn btn-dark" %></li>
    </ul>